<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <TabPane layoutX="14.0" layoutY="15.0" prefHeight="378.0" prefWidth="578.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Driver">
            <content>
              <AnchorPane fx:id="driverTabArea" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="ADD" layoutX="21.0" layoutY="72.0" mnemonicParsing="false" onAction="#handleDriverTabAction" text="Save" />
                     </children>
                  <Button fx:id="REMOVE" layoutX="21.0" layoutY="109.0" onAction="#handleDriverTabAction" text="Delete" />
                     <TextField fx:id="driverNameInput" layoutX="21.0" layoutY="38.0" />
                     <Button fx:id="UPDATE" layoutX="86.0" layoutY="71.0" mnemonicParsing="false" onAction="#handleDriverTabAction" text="Update" />
                     <TableView fx:id="driverTableView" layoutX="189.0" layoutY="34.0" prefHeight="288.0" prefWidth="376.0">
                       <columns>
                         <TableColumn fx:id="driverIdCol" prefWidth="128.0" text="ID" />
                         <TableColumn fx:id="driverNameCol" prefWidth="127.0" text="Name" />
                       </columns>
                        <columnResizePolicy>
                           <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                     </TableView>
                     <Label fx:id="responseLabel" layoutX="189.0" layoutY="14.0" prefHeight="17.0" prefWidth="375.0" />
              </AnchorPane>
            </content>
          </Tab>
          <Tab text="Vehicle">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Package">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab text="Delivery">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="testTable" layoutX="103.0" layoutY="57.0" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn fx:id="selectCol" prefWidth="75.0" text="select" />
                            <TableColumn fx:id="nameCol" prefWidth="75.0" text="name" />
                          </columns>
                        </TableView>
                        <Button fx:id="button" layoutX="335.0" layoutY="57.0" mnemonicParsing="false" text="Button" onAction="#handleButtonAction" />
                     </children></AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
